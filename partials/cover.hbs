<div class="cover gh-outer">
    <div class="cover-content gh-inner">
        {{#if @site.icon}}
        <div class="cover-icon">
            <img class="cover-icon-image" src="{{@site.icon}}" alt="{{@site.title}}">
        </div>
        {{/if}}

        {{#if @site.description}}
        <div class="cover-description">{{@site.description}}</div>
        {{/if}}

        {{#if @site.members_enabled}}
        {{#unless @member}}
        <div class="cover-cta">
            <a class="button members-subscribe" href="/signup">Sign up</a>
            <button class="button button-secondary members-login" data-portal="signin">Login</button>
        </div>
        {{/unless}}
        {{/if}}
    </div>
    {{#if @custom.card_section_title}}
    <div class="card-section-title">
        <h3>{{@custom.card_section_title}}</h3>
    </div>
    {{/if}}
    <section class="card-container">
        {{#if @custom.card_1_image}}
        {{#if @custom.card_1_title }}
        <div class="cover-card" style="background-image: url('{{@custom.card_1_image}}');">
            <div class="gradient">
                <span class="card-title">
                    {{@custom.card_1_title}}
                </span>
            </div>
        </div>
        {{/if}}
        {{/if}}
        <div class="cover-card ">
            <div class="gradient">
                <span class="card-title">
                    Steeped in Sound
                </span>
            </div>
        </div>
        <div class="cover-card">
            <div class="gradient">
                <span class="card-title">
                    Distros
                </span>
            </div>
        </div>
        <div class="cover-card ">
            <div class="gradient">
                <span class="card-title">
                    Tea Talks
                </span>
            </div>
        </div>
    </section>
</div>