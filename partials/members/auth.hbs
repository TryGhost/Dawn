{{#if @labs.members}}
  <section class="auth">
    {{#unless login}}
      <h3 class="auth-title">{{t "â­ï¸ Subscribe to {site}" site=@site.title}}</h3>
      <h4 class="auth-subtitle">{{t "Get all the latest public posts delivered straight to your inbox."}}</h4>
    {{else}}
      <h3 class="auth-title">{{t "ğŸ‘‹ğŸ¼ Welcome back!"}}</h3>
      <h4 class="auth-subtitle">{{t "Sign in to your account again for full access."}}</h4>
    {{/unless}}

    <form class="auth-form" data-members-form="subscribe">
      <div class="form-wrapper">
        <input class="auth-email" type="email" data-members-email placeholder="{{t "Your email address"}}" required="true" autocomplete="false">
        <button class="form-button" type="submit">
          {{> members/loader}}
        </button>
      </div>
      <div class="notification notification-success">
        <i class="icon icon-checkbox-marked-circle-outline notification-icon"></i>
        {{t "Great! Check your inbox and click the link to complete signin."}}
        <button class="button-icon notification-close"><i class="icon icon-window-close"></i></button>
      </div>
      <div class="notification notification-error">
        <i class="icon icon-alert-circle-outline notification-icon"></i>
        {{t "Please enter a valid email address!"}}
        <button class="button-icon notification-close"><i class="icon icon-window-close"></i></button>
      </div>
    </form>

    {{#unless login}}
      <a class="auth-footer" href="{{@site.url}}/signin/">
        {{t "Already have an account?"}}
        <span class="auth-footer-link">{{t "Sign in"}}</span>
      </a>
    {{else}}
      <a class="auth-footer" href="{{@site.url}}/signup/">
        {{t "Don't have an account yet?"}}
        <span class="auth-footer-link">{{t "Sign up"}}</span>
      </a>
    {{/unless}}
  </section>
{{/if}}